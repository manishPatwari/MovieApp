<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
  >

<ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:id="@+id/movieIcon"
   android:layout_alignParentLeft="true"
    android:src="@mipmap/app_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_movie_type"
        android:layout_toRightOf="@+id/movieIcon"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_movie_title"
        android:layout_toRightOf="@+id/item_movie_type"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:id="@+id/item_movie_yr"
        android:layout_toRightOf="@+id/item_movie_title"


        />


</RelativeLayout>

